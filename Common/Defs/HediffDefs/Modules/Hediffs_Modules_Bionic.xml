		</descriptionHyperlinks>
		<jobString>Installing advanced processing module.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ModuleEfficiency</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>ModuleEfficiency</li>
			</thingDefs>
		</fixedIngredientFilter>
		<addsHediff>ModuleEfficiency</addsHediff>
	</RecipeDef>


</Defs>