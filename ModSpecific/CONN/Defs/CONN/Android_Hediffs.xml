<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- ############## Hover Feet ############## -->
	<HediffDef ParentName="MSE_ModuleAddedBionic">
		<defName>Trunken_hediff_HoverFeet</defName>
		<label>hover foot module</label>
		<description>A self-sustaining hover board mounted on a rail adapter transplantion directly linked to the bones inside the foot.</description>
		<labelNoun>a hover foot</labelNoun>
		<stages>
			<li>
				<label>Robot</label>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.10</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<spawnThingOnRemoved>ANN_HoverFeet</spawnThingOnRemoved>
		<descriptionHyperlinks>
			<ThingDef>ANN_HoverFeet</ThingDef>
		</descriptionHyperlinks>
	</HediffDef>

	<ThingDef ParentName="MSE_ModuleBionic">
		<defName>ANN_HoverFeet</defName>
		<label>hover foot module</label>
		<description>(Replacement) A self-sustaining hover board mounted on a rail adapter transplantion directly linked to the bones inside the foot. Young street gangs used this once upon a time to escape after crime on Urbworlds. Enhances movement speed by gliding.</description>
		<techLevel>Spacer</techLevel>
		<costList>
			<Silver>75</Silver>
			<Plasteel>75</Plasteel>
			<ComponentSpacer>5</ComponentSpacer>
		</costList>
		<statBases>
			<MaxHitPoints>25</MaxHitPoints>
			<Flammability>0.5</Flammability>
			<DeteriorationRate>0.5</DeteriorationRate>
			<Beauty>-1</Beauty>
			<WorkToMake>30000</WorkToMake>
			<MarketValue>2750</MarketValue>
			<Mass>4.5</Mass>
		</statBases>
		<recipeMaker>
			<researchPrerequisite>ANN_CyberneticOrganism</researchPrerequisite>
			<skillRequirements>
				<Crafting>12</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>FabricationBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedHealthItemBionic</unfinishedThingDef>
		</recipeMaker>
		<thingCategories Inherit="False">
			<li>ANN_BodyPartsArtificial</li>
		</thingCategories>
	</ThingDef>

	<RecipeDef ParentName="MSE_SurgeryInstallModuleBase">
		<defName>ANN_InstallHoverFeet</defName>
		<label>install hover foot module</label>
		<description>Install hover foot module.</description>
		<jobString>Installing hover foot module.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ANN_HoverFeet</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>ANN_HoverFeet</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Foot</li>
		</appliedOnFixedBodyParts>
		<addsHediff>Trunken_hediff_HoverFeet</addsHediff>
		<descriptionHyperlinks>
			<ThingDef>ANN_HoverFeet</ThingDef>
		</descriptionHyperlinks>
	</RecipeDef>

	<!-- ############## Greenthumb ############## -->
	<HediffDef ParentName="MSE_ModuleAddedBionic">
		<defName>Trunken_hediff_Greenthumb</defName>
		<label>greenthumb module</label>
		<description>A dedicated bionic module for hybdrid settlements and colonization.</description>
		<labelNoun>a bionic hand module</labelNoun>
		<stages>
			<li>
				<statOffsets>
					<PlantHarvestYield>0.15</PlantHarvestYield>
					<PlantWorkSpeed>0.10</PlantWorkSpeed>
				</statOffsets>
			</li>
		</stages>
		<spawnThingOnRemoved>ANN_Greenthumb</spawnThingOnRemoved>
		<descriptionHyperlinks>
			<ThingDef>ANN_Greenthumb</ThingDef>
		</descriptionHyperlinks>
	</HediffDef>

	<ThingDef ParentName="MSE_ModuleBionic">
		<defName>ANN_Greenthumb</defName>
		<label>greenthumb module</label>
		<description>(Replacement) A dedicated bionic module for hybdrid settlements and colonization. It replaces the thumb as a full configurable and functionable finger hand device. The storage inside the palm of the hand is linked with a learning nanocomputer, containing informations about vegetation as flora and fauna types. An implemented hub feeds the user with knowledge requests, detected by the openhand sensor. The nail glows green during data scans and loading times.</description>
		<techLevel>Spacer</techLevel>
		<costList>
			<Jade>75</Jade>
			<Plasteel>25</Plasteel>
			<ComponentSpacer>3</ComponentSpacer>
		</costList>
		<statBases>
			<MaxHitPoints>10</MaxHitPoints>
			<Flammability>0.5</Flammability>
			<DeteriorationRate>0.1</DeteriorationRate>
			<Beauty>-1</Beauty>
			<WorkToMake>40000</WorkToMake>
			<MarketValue>1350</MarketValue>
			<Mass>0.4</Mass>
		</statBases>
		<recipeMaker>
			<researchPrerequisite>ANN_CyberneticOrganism</researchPrerequisite>
			<skillRequirements>
				<Crafting>11</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>FabricationBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedHealthItemBionic</unfinishedThingDef>
		</recipeMaker>
		<thingCategories Inherit="False">
			<li>ANN_BodyPartsArtificial</li>
		</thingCategories>
	</ThingDef>

	<RecipeDef ParentName="MSE_SurgeryInstallModuleBase">
		<defName>ANN_InstallGreenthumb</defName>
		<label>install greenthumb module</label>
		<description>Install a greenthumb module.</description>
		<jobString>Installing hand module.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ANN_Greenthumb</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>ANN_Greenthumb</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Hand</li>
		</appliedOnFixedBodyParts>
		<addsHediff>Trunken_hediff_Greenthumb</addsHediff>
		<descriptionHyperlinks>
			<ThingDef>ANN_Greenthumb</ThingDef>
		</descriptionHyperlinks>
	</RecipeDef>

</Defs>