<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- copy melee verbs from basegame -->
	<Operation Class="PatchOperationAddOrMergeCopy">
		<xpath>/Defs/HediffDef[@ParentName="MSE_ModuleAddedBionic"][defName="Trunken_hediff_OuterBlade_Module"]</xpath>
		<fromxpath>/Defs/HediffDef[@ParentName="ImplantHediffBase"][defName="Trunken_hediff_OuterBlade"]/*[name()="comps" or name()="stages"]</fromxpath>
	</Operation>
	<Operation Class="PatchOperationAddOrMergeCopy">
		<xpath>/Defs/HediffDef[@ParentName="MSE_ModuleAddedBionic"][defName="Trunken_hediff_Synchronizer_Module"]</xpath>
		<fromxpath>/Defs/HediffDef[@ParentName="ImplantHediffBase"][defName="Trunken_hediff_Synchronizer"]/*[name()="comps" or name()="stages"]</fromxpath>
	</Operation>



	<!-- Add module recipe hyperlinks to thingdefs -->

	<Operation Class="PatchOperationAddOrMerge">
		<xpath>/Defs/ThingDef[defName="ANN_OuterBlade"]</xpath>
		<value>
			<descriptionHyperlinks>
				<RecipeDef>ANN_InstallOuterBlade_Module</RecipeDef>
			</descriptionHyperlinks>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddOrMerge">
		<xpath>/Defs/ThingDef[defName="ANN_Synchronizer"]</xpath>
		<value>
			<descriptionHyperlinks>
				<RecipeDef>InstallSynchronizer_Module</RecipeDef>
			</descriptionHyperlinks>
		</value>
	</Operation>

	<!-- replace icon -->

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="ANN_OuterBlade" or defName="ANN_Synchronizer"]/graphicData</xpath>
		<value>
			<graphicData>
				<texPath>Things/Item/Health/HealthItemBionic3</texPath>
				<graphicClass>Graphic_Single</graphicClass>
				<drawSize>0.80</drawSize>
			</graphicData>
		</value>
	</Operation>

</Patch>