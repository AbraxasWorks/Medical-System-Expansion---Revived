		<fixedIngredientFilter>
			<thingDefs>
				<li>AdvancedPowerHand</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Hand</li>
		</appliedOnFixedBodyParts>
		<addsHediff>AdvancedPowerHand</addsHediff>
	</RecipeDef>

</Defs>