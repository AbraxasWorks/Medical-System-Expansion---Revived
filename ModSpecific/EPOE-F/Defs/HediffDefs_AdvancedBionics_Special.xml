		</products>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>BionicHand</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentSpacer</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>BionicHand</li>
				<li>PowerClaw</li>
