			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Arm</li>
		</appliedOnFixedBodyParts>
		<addsHediff>AdvancedBionicForearm</addsHediff>
	</RecipeDef>

