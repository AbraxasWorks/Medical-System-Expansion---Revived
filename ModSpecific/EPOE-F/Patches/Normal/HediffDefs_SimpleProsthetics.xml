<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Expanded Prosthetics and Organ Engineering - Forked</li>
			<li>Expanded Prosthetics, Implants and Augmentations</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- arm -->

				<li Class="PatchOperationAddOrMerge">
					<xpath>/Defs/ThingDef[defName="SimpleProstheticArm"]</xpath>
					<value>
						<comps>
							<li Class="MSE2.CompProperties_IncludedChildParts">
								<standardChildren>
									<li>SimpleProstheticHand</li>
								</standardChildren>
							</li>
						</comps>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/HediffDef[defName="SimpleProstheticArm"]</xpath>
					<value>
						<li Class="MSE2.IgnoreSubParts">
							<ignoredSubParts>
								<li>Humerus</li>
								<li>Radius</li>
							</ignoredSubParts>
						</li>
					</value>
				</li>

				<li Class="PatchOperationRemove">
					<xpath>/Defs/HediffDef[defName="SimpleProstheticArm"]/comps/li[@Class="HediffCompProperties_VerbGiver"]</xpath>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/RecipeDef[defName="InstallSimpleProstheticArm"]/appliedOnFixedBodyParts</xpath>
					<value>
						<appliedOnFixedBodyParts>
							<li>Arm</li>
						</appliedOnFixedBodyParts>
					</value>
				</li>

				<!-- leg -->

				<li Class="PatchOperationAddOrMerge">
					<xpath>/Defs/ThingDef[@ParentName="BodyPartProstheticMakeableBase"][defName="SimpleProstheticLeg"]</xpath>
					<value>
						<comps>
							<li Class="MSE2.CompProperties_IncludedChildParts">
								<standardChildren>
									<li>SimpleProstheticFoot</li>
								</standardChildren>
							</li>
						</comps>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/HediffDef[defName="SimpleProstheticLeg"]</xpath>
					<value>
						<li Class="MSE2.IgnoreSubParts">
							<ignoredSubParts>
								<li>Femur</li>
								<li>Tibia</li>
							</ignoredSubParts>
						</li>
					</value>
				</li>


