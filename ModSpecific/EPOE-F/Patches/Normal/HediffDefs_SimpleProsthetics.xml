				<!-- scyther blade -->

				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/HediffDef[@ParentName="addedPartSimple"][defName="EPOE_ScytherBlade"]</xpath>
					<value>
						<li Class="MSE2.IgnoreSubParts">
							<ignoredSubParts>
								<li>Finger</li>
							</ignoredSubParts>
