<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- leg -->

	<ThingDef ParentName="BodyPartBionicBaseADS">
		<defName>BionicLegAnimal</defName>
		<label>bionic animal leg</label>
		<description>Improved bionic leg for animals. Fits all animals.</description>
		<techLevel>Spacer</techLevel>
		<costList>
			<Plasteel>8</Plasteel>
			<ComponentSpacer>1</ComponentSpacer>
			<!-- total
			<Plasteel>10</Plasteel>
			<ComponentSpacer>2</ComponentSpacer> -->
		</costList>
		<statBases>
			<WorkToMake>10000</WorkToMake>
			<Mass>7</Mass>
			<!-- total
			<WorkToMake>12000</WorkToMake>
			<Mass>8</Mass> -->
		</statBases>
		<techHediffsTags>
			<li>Advanced</li>
		</techHediffsTags>
		<comps>
			<li Class="MSE2.CompProperties_IncludedChildParts">
				<standardChildren>
					<li>BionicPawAnimal</li>
					<li>BionicHoofAnimal</li>
				</standardChildren>
			</li>
		</comps>
	</ThingDef>

	<!-- paw -->

	<ThingDef ParentName="BodyPartBionicBaseADS">
		<defName>BionicPawAnimal</defName>
		<label>bionic animal paw</label>
		<description>Improved bionic paw for animals. Fits all animals.</description>
		<techLevel>Spacer</techLevel>
		<costList>
			<Plasteel>2</Plasteel>
			<ComponentSpacer>1</ComponentSpacer>
		</costList>
		<statBases>
			<WorkToMake>2000</WorkToMake>
			<Mass>1</Mass>
		</statBases>
		<techHediffsTags>
			<li>Advanced</li>
		</techHediffsTags>
	</ThingDef>

	<HediffDef ParentName="addedPartAnimal">
		<defName>BionicPawAnimal</defName>
		<label>bionic animal paw</label>
		<description>aa</description>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>bionic animal paw</label>
						<capacities>
							<li>Scratch</li>
						</capacities>
						<power>20</power>
						<cooldownTime>1.4</cooldownTime>
						<alwaysTreatAsWeapon>false</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
		</comps>
		<spawnThingOnRemoved>BionicPawAnimal</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.25</partEfficiency>
		</addedPartProps>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.025</offset>
					</li>
				</capMods>
				<statOffsets>
					<ArmorRating_Sharp>0.03</ArmorRating_Sharp>
					<ArmorRating_Blunt>0.03</ArmorRating_Blunt>
					<ArmorRating_Heat>0.03</ArmorRating_Heat>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>

	<RecipeDef ParentName="SurgeryFleshAnimal">
		<defName>InstallBionicPawAnimal</defName>
		<label>install animal bionic paw</label>
		<description>Installs animal bionic paw.</description>
		<workerClass>Recipe_InstallArtificialBodyPart</workerClass>
		<jobString>Installing bionic animal paw.</jobString>
		<workAmount>2000</workAmount>
		<skillRequirements>
			<Medicine>8</Medicine>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>BionicPawAnimal</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
			<thingDefs>
				<li>BionicPawAnimal</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Paw</li>
		</appliedOnFixedBodyParts>
		<addsHediff>BionicPawAnimal</addsHediff>
		<recipeUsers>
		</recipeUsers>
	</RecipeDef>

