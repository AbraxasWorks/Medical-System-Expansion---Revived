<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Royalty</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
                
                <!-- tab moving -->
                
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ResearchProjectDef[@Name="BaseBodyPartEmpire_TierA"]</xpath>
                    <value>                        
		                <tab>MSE</tab>
                    </value>
                </li>

                <!-- move them 10 to the left -->

                <li Class="OrenoMSE.XpathPatches.PatchOperationOffsetField">
                    <xpath>/Defs/ResearchProjectDef[@ParentName="BaseBodyPartEmpire_TierA" or @ParentName="BaseBodyPartEmpire_TierB"]/researchViewX</xpath>
                    <offset>-10</offset>
                </li>
                


                <!-- extra dependecies -->


                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ResearchProjectDef[defName="SpecializedLimbs" or defName="FleshShaping"]/prerequisites</xpath>
                    <value>                        
                        <li>Bionics</li>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ResearchProjectDef[defName="CompactWeaponry"]/prerequisites</xpath>
                    <value>                        
                        <li>MSE_ModulesCrafting</li>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ResearchProjectDef[defName="ArtificialMetabolism" or defName="SkinHardening" or defName="HealingFactors" or defName="MolecularAnalysis"]/prerequisites</xpath>
                    <value>                        
                        <li>MSE_Implants</li>
                    </value>
                </li>
                

                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Expanded Prosthetics and Organ Engineering</li>
                    </mods>
                    <match Class="PatchOperationAdd">
                        <xpath>/Defs/ResearchProjectDef[defName="BrainWiring" or defName="NeuralComputation" or defName="CircadianInfluence"]/prerequisites</xpath>
                        <value>                        
                            <li>BrainSurgery</li>
                        </value>
                    </match>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>/Defs/ResearchProjectDef[defName="BrainWiring" or defName="NeuralComputation" or defName="CircadianInfluence"]/prerequisites</xpath>
                        <value>                        
                            <li>MSE_BrainImplants</li>
                        </value>
                    </nomatch>
                </li>



			</operations>
		</match>
	</Operation>

</Patch>