<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- arm -->

  <Operation Class="MSE2.XpathPatches.PatchOperationAddOrMerge">
    <xpath>/Defs/ThingDef[@ParentName="BodyPartProstheticMakeableBase"][defName="SimpleProstheticArm"]</xpath>
    <value>
      <comps>
        <li Class="MSE2.CompProperties_IncludedChildParts">
          <standardChildren>
            <li>SimpleProstheticHand</li>
            <!-- <li>SimpleProstheticHumerus</li>
            <li>SimpleProstheticRadius</li> -->
          </standardChildren>
        </li>
      </comps>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>/Defs/HediffDef[@ParentName="AddedBodyPartBase"][defName="SimpleProstheticArm"]</xpath>
    <value>
      <li Class="MSE2.IgnoreSubParts">
        <ignoredSubParts>
          <li>Humerus</li>
          <li>Radius</li>
        </ignoredSubParts>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/RecipeDef[@ParentName="SurgeryInstallBodyPartProstheticBase"][defName="InstallSimpleProstheticArm"]/appliedOnFixedBodyParts</xpath>
    <value>
      <appliedOnFixedBodyParts>
        <li>Arm</li>
      </appliedOnFixedBodyParts>
    </value>
  </Operation>

  <!-- leg -->

  <Operation Class="MSE2.XpathPatches.PatchOperationAddOrMerge">
    <xpath>/Defs/ThingDef[@ParentName="BodyPartProstheticMakeableBase"][defName="SimpleProstheticLeg"]</xpath>
    <value>
      <comps>
        <li Class="MSE2.CompProperties_IncludedChildParts">
          <standardChildren>
            <li>SimpleProstheticFoot</li>
            <!-- <li>SimpleProstheticFemur</li>
            <li>SimpleProstheticTibia</li> -->
          </standardChildren>
        </li>
      </comps>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>/Defs/HediffDef[@ParentName="AddedBodyPartBase"][defName="SimpleProstheticLeg"]</xpath>
    <value>
      <li Class="MSE2.IgnoreSubParts">
        <ignoredSubParts>
          <li>Femur</li>
          <li>Tibia</li>
        </ignoredSubParts>
      </li>
    </value>
  </Operation>


  <!-- arm verbs (CE removes them so i can only copy them when there is no CE) -->

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Combat Extended</li>
    </mods>
    <nomatch Class="PatchOperationSequence">
      <operations>
        <!-- copy melee verbs -->

        <li Class="MSE2.XpathPatches.PatchOperationAddOrMerge">
          <xpath>/Defs/HediffDef[@ParentName="AddedBodyPartBase"][defName="SimpleProstheticHand"]</xpath>
          <value>
            <comps/>
          </value>
        </li>
        <li Class="MSE2.XpathPatches.PatchOperationAddOrMergeCopy">
          <xpath>/Defs/HediffDef[@ParentName="AddedBodyPartBase"][defName="SimpleProstheticHand"]/comps</xpath>
          <fromxpath>/Defs/HediffDef[@ParentName="AddedBodyPartBase"][defName="SimpleProstheticArm"]/comps/li[@Class="HediffCompProperties_VerbGiver"]</fromxpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/HediffDef[@ParentName="AddedBodyPartBase"][defName="SimpleProstheticArm"]/comps/li[@Class="HediffCompProperties_VerbGiver"]</xpath>
        </li>

      </operations>
    </nomatch>
  </Operation>


</Patch>