<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Expanded Prosthetics and Organ Engineering</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

        <!-- remove verbs -->
        <li Class="PatchOperationRemove">
          <xpath>/Defs/HediffDef[@ParentName="addedPartBasic"][defName="SteelArm"]/comps/li[@Class="HediffCompProperties_VerbGiver"]</xpath>
        </li>
	
        <!-- steel arm -->

        <li Class="PatchOperationAddModExtension">
					<xpath>/Defs/HediffDef[@ParentName="addedPartBasic"][defName="SteelArm"]</xpath>
          <value>
            <li Class="OrenoMSE.EfficiencyCalculationPatches.IgnoreSubParts">
              <ignoredSubParts>
                <li>Humerus</li>
                <li>Radius</li>
              </ignoredSubParts>
            </li> 
          </value>
        </li>

				<li Class="OrenoMSE.XpathPatches.PatchOperationAddToList">
					<xpath>/Defs/ThingDef[@ParentName="Basic"][defName="SteelArm"]</xpath>
					<list>comps</list>
					<value>
						<li Class="OrenoMSE.CompProperties_CompIncludedChildParts">
							<standardChildren>
                <li>HookHand</li>
							</standardChildren>
						</li>
					</value>
				</li>

        <!-- hook hand -->

        <li Class="PatchOperationAddModExtension">
					<xpath>/Defs/HediffDef[@ParentName="addedPartBasic"][defName="WoodenHand"]</xpath>
          <value>
            <li Class="OrenoMSE.EfficiencyCalculationPatches.IgnoreSubParts">
              <ignoredSubParts>
                <li>Finger</li>
              </ignoredSubParts>
            </li> 
          </value>
        </li>

        <!-- pegleg -->

        <li Class="PatchOperationAddModExtension">
					<xpath>/Defs/HediffDef[@ParentName="addedPartBasic"][defName="PegLeg"]</xpath>
          <value>
            <li Class="OrenoMSE.EfficiencyCalculationPatches.IgnoreSubParts">
              <ignoredSubParts>
                <li>Foot</li>
                <li>Femur</li>
                <li>Tibia</li>
                <li>Toe</li>
              </ignoredSubParts>
            </li>
          </value>
        </li>



			</operations>
		</match>
	</Operation>

</Patch>